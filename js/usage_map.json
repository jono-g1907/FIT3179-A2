{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Internet Usage",
    "projection": {
        "type": "equalEarth"
    },
    "layer": [
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jono-g1907/FIT3179-A2/main/js/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "https://raw.githubusercontent.com/jono-g1907/FIT3179-A2/main/data/internet%20usage.csv"
            },
            "transform": [
                {
                    "lookup": "id",
                    "from": {
                        "data": {
                            "url": "https://raw.githubusercontent.com/jono-g1907/FIT3179-A2/main/data/internet%20usage.csv"
                        },
                        "key": "Code",
                        "fields": [
                            "Internet Users(%)"
                        ]
                    }
                },
                {
                    "filter": "datum.Year === 1980"
                }
            ],
            "mark": {
                "type": "geoshape",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "color": {
                    "field": "Internet Users(%)",
                    "type": "quantitative",
                    "scale": {
                        "scheme": "greens"
                    }
                }
            }
        }
    ]
}